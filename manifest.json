{
    "manifest_version":2,    
    "name":"Stay_Fit",
    "version":"1.0",
    "description":"Get regular remainder to stay hydrate and fit",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions":[
        "storage",
        "notifications"
    ], 
    "background": {
        "scripts": [ "background_script.js" ]
     }
}